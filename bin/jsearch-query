#!/usr/bin/env bash

MAIN_CLASS=org.apache.couchdb.lucene.search.Runner

BIN=`dirname "$0"`
JSEARCH_HOME="/usr/local/src/jsearch/"
LIB="$JSEARCH_HOME/lib"
JSEARCH="$JSEARCH_HOME/build/jsearch-0.1-dev.jar"

CLASSPATH=$JSEARCH
for jar in `ls $LIB/*.jar`; do
  CLASSPATH=${CLASSPATH}:$jar;
done

java -cp "$CLASSPATH" $MAIN_CLASS
